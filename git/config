[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	cm = "!f() { git commit -m \"$*\"; }; f"
[pull]
	rebase = true
[init]
	defaultBranch = master
[core]
	pager = less

# Include local config for private information (user, credentials)
[include]
	path = ~/.config/git/config.local
